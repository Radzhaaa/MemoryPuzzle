<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.memorypuzzle.MenuController">
    <children>
        <Button fx:id="btnCreate" layoutX="248.0" layoutY="196.0" mnemonicParsing="false" onAction="#createRoom" text="Создать комнату" />
        <Label layoutX="283.0" layoutY="14.0" prefHeight="42.0" prefWidth="217.0" text="Memory Puzzle">
            <font>
                <Font name="Arial Bold" size="28.0" />
            </font>
        </Label>
        <Button fx:id="btnConnect" layoutX="253.0" layoutY="412.0" mnemonicParsing="false" onAction="#connectRoom" text="Войти в комнату" />
        <TextField fx:id="fieldName" layoutX="283.0" layoutY="98.0" prefHeight="60.0" prefWidth="217.0" />
        <Label fx:id="labelName" layoutX="65.0" layoutY="109.0" text="Введите имя:" />
        <Label fx:id="labelSessionId" layoutX="14.0" layoutY="311.0" text="Введите session id:" />
        <TextField fx:id="fieldSessionId" layoutX="283.0" layoutY="300.0" prefHeight="60.0" prefWidth="217.0" />
        <Button fx:id="btnNext" layoutX="621.0" layoutY="503.0" mnemonicParsing="false" onAction="#handleNext" text="Войти" />
      <Button fx:id="backbutton" layoutX="26.0" layoutY="503.0" mnemonicParsing="false" onAction="#returnBack" text="Обратно" />
    </children>
</AnchorPane>
